@model IEnumerable<BukuTamuApp.Models.BukuTamu>

@{
    ViewData["Title"] = "Daftar Buku Tamu";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Daftar Buku Tamu</h3>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a asp-action="Create" class="btn btn-primary">Tulis Pesan</a>
        }
    </div>
    <div class="card-body">
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">@item.Member.Nama</h5>
                        <small class="text-muted">@item.Timestamp.ToString("dd MMM yyyy HH:mm")</small>
                    </div>
                    <p class="card-text">@item.Messages</p>
                    @if (!string.IsNullOrEmpty(item.Gambar))
                    {
                        <img src="~/uploads/@item.Gambar" class="img-fluid mb-2" style="max-height: 200px;" />
                    }
                    <div>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detail</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 